.container {
    height: 100%;
}

.current_location_info {
    height: 140rpx;
    background: #fff;
    padding-left: 40rpx;
}

.current_location_info image {
    width: 24rpx;
    height: 24rpx;
}

.info {
    display: inline-block;
    font-family: PingFangSC-Medium;
    font-size: 26rpx;
    color: #9B9BA1;
    padding-left: 35rpx;
}

.flex {
    display: flex;
}

.info-detail {
    flex: 3;
    font-family: PingFangSC-Semibold;
    font-size: 48rpx;
    color: #38383C;
}

.flex-1 {
    flex: 1;
}

.button {
    width: 120rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: #09CD8A;
    border-radius: 5px;
    color: #fff;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    text-align: center;
}

.target-callout{
    width:242rpx;
    height:70rpx;
    position: absolute;
    top:50%;
    left:50%;  
    transform: translateX(-50%) translateY(-155rpx); 
  }

  .target-ico-location{
    position: absolute;
    width:27px;
    height: 45px;
    top:30%;
    left:50%; 
    margin-left:-28rpx;
    margin-top: 100rpx;
  }

  .target-label{
    position: absolute; 
    top:30%;
    left:50%; 
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background: rgba(56,56,60,0.90);
    border-radius: 10rpx;
    padding: 10rpx 30rpx;
    font-family: PingFangSC-Medium;
    transform: translateX(-50%) translateY(20rpx); 
    box-shadow: 0 10px 20px 0 rgba(0,0,0,0.10); 
  }

  .target-label .padding{
    height: 42rpx;
    line-height: 42rpx;
  }


  .triangle {
    position:absolute;
    width:24rpx;
    height:12rpx;
    left:50%;
    top:30%;
    transform:translateX(-50%) translateY(20rpx);
    margin-top:60rpx;
  }

  .locationlist-ico{
   position: absolute;
    color: #9B9BA1;
    font-size: 24rpx;
    line-height: 38rpx;
  }

  .dsn {
      display: none;
  }

  .map {
      width: 100%;
      height: 1400rpx;
  }
